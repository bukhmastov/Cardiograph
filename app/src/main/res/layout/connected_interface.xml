<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pulse"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="@string/pulse_default"
        android:textSize="16sp"
        android:textAlignment="textStart" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/graphViewLayout1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.bukhmastov.cardiograph.GraphView
                android:id="@+id/graphView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/colorSecondaryText"/>

        <FrameLayout
            android:id="@+id/graphViewLayout2"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.bukhmastov.cardiograph.GraphView
                android:id="@+id/graphView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/colorSecondaryText"/>

        <FrameLayout
            android:id="@+id/graphViewLayout3"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.bukhmastov.cardiograph.GraphView
                android:id="@+id/graphView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/colorSecondaryText"/>

        <FrameLayout
            android:id="@+id/graphViewLayout4"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.bukhmastov.cardiograph.GraphView
                android:id="@+id/graphView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/colorSecondaryText"/>

        <FrameLayout
            android:id="@+id/graphViewLayout5"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.bukhmastov.cardiograph.GraphView
                android:id="@+id/graphView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>